{
  "name": "pioneer-platform",
  "version": "7.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "modules/**/**/*",
      "apps/**/*",
      "e2e/**/**/**/*"
    ]
  },
  "scripts": {
    "yarn": "yarn",
    "build": "lerna run build --include-dependencies --scope @pioneer-platform/*",
    "clean": "lerna run clean --scope @pioneer-platform/* && rm -rf coverage dist node_modules",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint '*/**/*.{js,ts}' && yarn lint:ts",
    "lint:ts": "tsc --noEmit",
    "test": "yarn jest --verbose --config jest.config.js",
    "coverage": "jest --coverage",
    "dev:watch:pioneer": "cd modules/pioneer/pioneer && npm run build:watch",
    "dev:watch:pioneer-app": "cd modules/pioneer/pioneer-app && npm run build:watch",
    "dev:watch:pioneer-sdk": "cd modules/pioneer/pioneer-sdk && npm run build:watch",
    "version:patch": "lerna version patch --yes",
    "version:minor": "lerna version minor --yes",
    "version:major": "lerna version major --yes",
    "publish:lerna": "lerna publish from-package --no-private --yes"
  },
  "devDependencies": {
    "@types/debug": "^4.1.2",
    "@types/jest": "^24.9.1",
    "jest": "^24.9.0",
    "jest-junit": "^6.4.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^24.3.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "yarn": "^1.22.10"
  }
}
